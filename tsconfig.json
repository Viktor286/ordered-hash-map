{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["es2020"],
    "module": "ESNext",
    "target": "ES2020",
  },
  "files": ["src/index.ts"],
  "exclude": [
    "**/*.spec.ts",
    ".idea",
    "dist",
    "coverage",
    "node_modules"
  ]
}
